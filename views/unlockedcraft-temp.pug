doctype html
html
	head
		style.
			html,body{
				background-color: #9BA5BD;
			}
			#main{
				background-color: #675EDB;
				color: white;
				font-weight: bold;
				padding: 48px 0px;
				box-shadow: 0px 4px 30px #1a003cc4;
			}
			#main-parent{
				width: 100%;
				margin: 48px 0px;
			}
			#discord{
				width: 100px;
				height: 100px;
				border-radius: 50%;
				box-shadow: 0px 0px 30px #1a003cc4;
				margin: auto;
				display: block;
				position: relative;
				top: 12px;
				z-index: 2;
				cursor: pointer;
			}
			#discord-shadow{
				position: relative;
				z-index: 1;
				margin: auto;
				top: 2px;
				width: 95px;
				height: 20px;
				border-radius: 50%;
				transform: skewX(10deg);
				background-color: #1a161f47;
				box-shadow: 0px 0px 10px 5px #1a161f47;
			}
			#icon{
				width: 72px;
				height: 72px;
				display: inline-block;
				position: relative;
				margin-right: 6px;
				top: 6px;
			}
			#unlocked{
				color: #cccccc;
				text-shadow: 2px 2px 5px #00000030;
			}
			#craft{
				color: #e7efff;
				text-shadow: 2px 2px 5px #04002130;
			}
		title UnlockedCraft
		link(href='/css/w3.css', rel='stylesheet')
		link(href='/css/style.css', rel='stylesheet')
		link(href='/css/colors.css', rel='stylesheet')
		link(href='/css/fonts.css?v=1', rel='stylesheet')
		script(src='/js/jquery.min.js')
		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
	body
		div(class="w3-center Milford" id="main-parent")
			div(id="main")
				h1(class="Milford w3-jumbo") 
					span(id="icon")
						img(class="w3-image" src="/images/unlockedcraft-no-bg.png")
					span(id="unlocked") UNLOCKED
					span(id="craft") CRAFT
				div(class="Roboto w3-large" style="color: #e7efff;")
					p Our site and server aren't just ready yet.
					p In the meantime, please join our Discord server!
				a(id="discord" href="https://discord.gg/7DRUXuRkkD" target="_blank")
					img(src="/images/discord.png" class="w3-image")
				div(id="discord-shadow")